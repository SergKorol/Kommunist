<?xml version="1.0" encoding="utf-8"?>

<controls:MyTabBar xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Kommunist.Application.Controls"
             xmlns:iOsSpecific="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:enums="clr-namespace:Kommunist.Application.Enums"
             Style="{StaticResource DefaultPageStyle}"
             x:Class="Kommunist.Application.Views.SettingsPage"
             ControlTemplate="{StaticResource TapBarTemplate}">
    <controls:MyTabBar.Content>
        <Grid BackgroundColor="{DynamicResource BackgroundColor}">
            <VerticalStackLayout Margin="20"
                                 VerticalOptions="Start">
                <Grid RowDefinitions="Auto,*" RowSpacing="0">
                    <ScrollView Grid.Row="1" Margin="0,25,0,0">
                        <VerticalStackLayout Padding="20,0,20,20" Spacing="0">
                            <!-- Main Card -->
                            <Border Style="{StaticResource CardStyle}">
                                <VerticalStackLayout Spacing="10">
                                    <Label Text="Choose Dark or Light theme:" Style="{StaticResource LabelStyle}" />
                                    <controls:EnumPicker iOsSpecific:Picker.UpdateMode="WhenFinished"
                                                         EnumType="{x:Type enums:Theme}"
                                                         Title="Select Theme"
                                                         TextColor="{DynamicResource TextColor}"
                                                         SelectedIndexChanged="OnPickerSelectionChanged" />
                                </VerticalStackLayout>
                                </Border>
                            </VerticalStackLayout>
                        </ScrollView>

                </Grid>

                <Label x:Name="StatusLabel"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </controls:MyTabBar.Content>
</controls:MyTabBar>