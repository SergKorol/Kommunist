<?xml version="1.0" encoding="utf-8"?>

<controls:MyTabBar xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Kommunist.Application.ViewModels"
             xmlns:controls="clr-namespace:Kommunist.Application.Controls"
             x:Class="Kommunist.Application.Views.ICalConfigPage"
             x:DataType="{x:Type viewModels:ICalConfigViewModel}"
             Title="iCal Configuration"
             ControlTemplate="{StaticResource SecondaryColorTemplate}">
    <controls:MyTabBar.Content>
        <VerticalStackLayout Padding="20">
            <Label Text="Invitees (comma-separated emails):" />
            <HorizontalStackLayout>
                <Entry Text="{Binding Invitees}" 
                       Placeholder="example@email.com" 
                       Keyboard="Email" 
                       TextChanged="OnInviteesTextChanged" />
                <CheckBox IsChecked="{Binding SendEmail}" 
                          IsEnabled="{Binding IsSendEmailEnabled}" />
                <Label VerticalTextAlignment="Center" Text="Send email" />
            </HorizontalStackLayout>
            

            <Label Text="Alarm (minutes before event):" />
            <Entry Text="{Binding AlarmMinutes}" 
                   Keyboard="Numeric" 
                   Placeholder="10"
                   MaxLength="3"
                   TextChanged="OnAlarmMinutesChanged" />

            <Button Text="Generate iCal" Command="{Binding GenerateIcalCommand}" />
        </VerticalStackLayout>
        <!-- <VerticalStackLayout Padding="20"> -->
        <!--     <Label Text="Invitees (comma-separated emails):" /> -->
        <!--     <Entry Text="{Binding Invitees}" Placeholder="example@email.com" Keyboard="Email" /> -->
