                    x:Class="Kommunist.Application.Themes.DarkTheme">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#82B1FF</Color>
    <Color x:Key="PrimaryDarkColor">#8C9EFF</Color>
    <Color x:Key="Secondary">#2A2A2E</Color>
    <Color x:Key="Warning">#FF6E6E</Color>
    <Color x:Key="Success">#66BB6A</Color>

    <!-- Text Colors -->
    <Color x:Key="ContentTextColor">White</Color>
