    <Color x:Key="SelectedDayBackgroundColor">#82B1FF</Color>
    <Color x:Key="TodayIndicatorColor">#FF9100</Color>
    <Color x:Key="BorderColor">#333333</Color>
    <Color x:Key="BorderBackgroundColor">#424242</Color>
    <Color x:Key="BorderShadowColor">#141414</Color>

    <Color x:Key="TextButtonColor">#512BD4</Color>
