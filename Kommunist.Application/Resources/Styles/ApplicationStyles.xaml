<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xc="clr-namespace:XCalendar.Maui.Views;assembly=XCalendar.Maui">

    <x:Double x:Key="SmallFontSize">14</x:Double>
    <x:Double x:Key="MediumFontSize">16</x:Double>
    <x:Double x:Key="LargeFontSize">18</x:Double>

    <Color x:Key="CalendarPrimaryColor">#E00000</Color>
    <Color x:Key="CalendarBackgroundColor">White</Color>
    <Color x:Key="CalendarTertiaryColor">#FFA0A0</Color>
    <Color x:Key="CalendarPrimaryTextColor">White</Color>
    <Color x:Key="CalendarBackgroundTextColor">Black</Color>

    <Color x:Key="TappableSettingTextColor">#0080E0</Color>

    <x:Double x:Key="ExamplesTitleFontSize">19</x:Double>
    <x:Double x:Key="ExamplesDescriptionFontSize">16</x:Double>

    <x:Boolean x:Key="TrueValue">True</x:Boolean>
    <x:Boolean x:Key="FalseValue">False</x:Boolean>

    <Style TargetType="{x:Type xc:CalendarView}" x:Key="DefaultCalendarViewStyle">
        <Setter Property="BackgroundColor" Value="{DynamicResource CalendarBackgroundColor}" />
    </Style>

    <Style TargetType="{x:Type xc:NavigationView}" x:Key="DefaultNavigationViewStyle">
        <Setter Property="BackgroundColor" Value="{DynamicResource CalendarPrimaryColor}" />
        <Setter Property="ArrowColor" Value="{DynamicResource CalendarPrimaryTextColor}" />
        <Setter Property="TextColor" Value="{DynamicResource CalendarPrimaryTextColor}" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>
    
    <ControlTemplate x:Key="SecondaryColorTemplate">
        <Grid RowDefinitions="*,Auto">
            <ContentPresenter Grid.Row="0" />
            <Grid Grid.Row="1" VerticalOptions="End">
                <Border HeightRequest="72"
                        BackgroundColor="{DynamicResource SurfaceColor}"
                        StrokeThickness="0"
                        VerticalOptions="End">
                    <Border.Shadow>
                        <Shadow Brush="{DynamicResource ShadowColor}"
                                Offset="0,-2"
                                Radius="8"
                                Opacity="0.2" />
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20,20,0,0" />
                    </Border.StrokeShape>
                    
                    <Grid ColumnDefinitions="*, *, *" Padding="8,0">
                        <Button Grid.Column="0"
                                Text="Home"
                                FontSize="12"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource TextSecondaryColor}"
                                HorizontalOptions="Center"
                                ContentLayout="Top,8"
                                ImageSource="icon_home.png"
                                Command="{Binding NavigateToCommand, Source={RelativeSource TemplatedParent}}"
                                CommandParameter="HomePage">
                        </Button>
                        
                        <Button Grid.Column="1"
                                Text="Filters"
                                FontSize="12"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource TextSecondaryColor}"
                                HorizontalOptions="Center"
                                ContentLayout="Top,8"
                                ImageSource="icon_filters.png"
                                Command="{Binding NavigateToCommand, Source={RelativeSource TemplatedParent}}"
                                CommandParameter="FiltersPage">
                        </Button>
                        
                        <Button Grid.Column="2"
                                Text="Settings"
                                FontSize="12"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource TextSecondaryColor}"
                                HorizontalOptions="Center"
                                ContentLayout="Top,8"
                                ImageSource="icon_settings.png"
                                Command="{Binding NavigateToCommand, Source={RelativeSource TemplatedParent}}"
                                CommandParameter="SettingsPage">
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ControlTemplate>

    <Style TargetType="{x:Type Label}" x:Key="ShellLabelStyle">
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="TextColor" Value="{DynamicResource TitleTextColor}" />
    </Style>


    <Style TargetType="{x:Type ContentPage}" x:Key="DefaultPageStyle">
        <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
    </Style>

    <!-- <Style TargetType="{x:Type Label}"> -->
    <!--     <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" /> -->
    <!--     <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" /> -->
    <!-- </Style> -->

    <!-- <Style TargetType="{x:Type Entry}"> -->
    <!--     <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" /> -->
    <!--     <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" /> -->
    <!-- </Style> -->

    <Style TargetType="{x:Type Editor}">
        <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="AutoSize" Value="TextChanges" />
    </Style>

    <!-- <Style TargetType="{x:Type Picker}"> -->
    <!--     <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" /> -->
    <!--     <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" /> -->
    <!-- </Style> -->

    <!-- <Style TargetType="{x:Type Switch}"> -->
    <!--     <Setter Property="OnColor" Value="{DynamicResource PrimaryColor}" /> -->
    <!--     <Setter Property="ThumbColor" Value="#EEEEEF" /> -->
    <!-- </Style> -->

    <Style TargetType="{x:Type Grid}">
        <Setter Property="ColumnSpacing" Value="0" />
        <Setter Property="RowSpacing" Value="0" />
    </Style>
    
    
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{DynamicResource Primary}" />
    </Style>
    
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{DynamicResource  BorderColor}" />
        <Setter Property="StrokeShape" Value="Rectangle" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource TextButtonColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundButtonColor}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{DynamicResource VisualTextButtonColor}" />
                            <Setter Property="BackgroundColor" Value="{DynamicResource VisualBackgroundButtonColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{DynamicResource CheckboxColor}" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Color" Value="{DynamicResource VisualCheckboxColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{DynamicResource DatePickerColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{DynamicResource VisualDatePickerColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource EntryTextColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource EntryPlaceholderColor}" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{DynamicResource VisualEntryColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource LabelTextColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{DynamicResource VisualLabelColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{DynamicResource PickerTextColor}" />
        <Setter Property="TitleColor" Value="{DynamicResource PickerTitleColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{DynamicResource VisualPickerTextColor}" />
                            <Setter Property="TitleColor" Value="{DynamicResource VisualPickerTitleColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Shadow">
        <Setter Property="Radius" Value="15" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Offset" Value="10,10" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{DynamicResource SwitchColor}" />
        <Setter Property="ThumbColor" Value="{DynamicResource SwitchThumbColor}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="OnColor" Value="{DynamicResource SwitchDisabledColor}" />
                            <Setter Property="ThumbColor" Value="{DynamicResource SwitchDisabledThumbColor}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="On">
                        <VisualState.Setters>
                            <Setter Property="OnColor" Value="{DynamicResource SwitchOnColor}" />
                            <Setter Property="ThumbColor" Value="{DynamicResource SwitchOnThumbColor}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Off">
                        <VisualState.Setters>
                            <Setter Property="ThumbColor" Value="{DynamicResource SwitchOffThumbColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}"/>
        <Setter Property="Stroke" Value="{DynamicResource BorderColor}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 15,15,15,15"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
        <Setter Property="Shadow">
            <Shadow Brush="#22000000"
                    Offset="0,3"
                    Radius="6"/>
        </Setter>
    </Style>
    
    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{DynamicResource EntryBackgroundColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource TextColor}"/>
        <Setter Property="PlaceholderColor" Value="{DynamicResource EntryPlaceholderColor}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
    </Style>
    
    <Style x:Key="BorderedEntryContainerStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource BorderedEntryContainerColor}"/>
        <Setter Property="Stroke" Value="{DynamicResource BorderColor}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10,10,10,10"/>
        <Setter Property="Margin" Value="0,5,0,15"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="Shadow">
            <Shadow Brush="#22000000"
                    Offset="0,3"
                    Radius="6"/>
        </Setter>
    </Style>
    
    <Style x:Key="LabelStyle" TargetType="Label">
        <!-- <Setter Property="TextColor" Value="{DynamicResource TextColor}"/> -->
        <!-- <Setter Property="FontSize" Value="16"/> -->
        <!-- <Setter Property="FontAttributes" Value="Bold"/> -->
        <!-- <Setter Property="Margin" Value="5,0,0,5"/> -->
    </Style>
            
    <Style x:Key="CheckboxLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="{DynamicResource PrimaryButtonTextColor}"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="HeightRequest" Value="56"/>
                <Setter Property="Margin" Value="0,15,0,0"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal"/>
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryDarkColor}"/>
                                    <Setter Property="Scale" Value="0.98"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryBackgroundButtonColor}"/>
                                    <Setter Property="TextColor" Value="#EEEEEE"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            
            <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Color" Value="{DynamicResource PrimaryColor}"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="MinimumHeightRequest" Value="24"/>
                <Setter Property="MinimumWidthRequest" Value="24"/>
                <Setter Property="Scale" Value="1.2"/>
            </Style>
    
    <Style x:Key="InvalidEntryStyle" TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource InvalidEntryColor}" />
    </Style>
    <Style x:Key="ValidEntryStyle" TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource ValidEntryColor}" />
    </Style>
</ResourceDictionary>