<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xc="clr-namespace:XCalendar.Maui.Views;assembly=XCalendar.Maui">

    <x:Double x:Key="SmallFontSize">14</x:Double>
    <x:Double x:Key="MediumFontSize">16</x:Double>
    <x:Double x:Key="LargeFontSize">18</x:Double>

    <Color x:Key="CalendarPrimaryColor">#E00000</Color>
    <Color x:Key="CalendarBackgroundColor">White</Color>
    <Color x:Key="CalendarTertiaryColor">#FFA0A0</Color>
    <Color x:Key="CalendarPrimaryTextColor">White</Color>
    <Color x:Key="CalendarBackgroundTextColor">Black</Color>

    <Color x:Key="TappableSettingTextColor">#0080E0</Color>

    <x:Double x:Key="ExamplesTitleFontSize">19</x:Double>
    <x:Double x:Key="ExamplesDescriptionFontSize">16</x:Double>

    <x:Boolean x:Key="TrueValue">True</x:Boolean>
    <x:Boolean x:Key="FalseValue">False</x:Boolean>

    <Style TargetType="{x:Type xc:CalendarView}" x:Key="DefaultCalendarViewStyle">
        <Setter Property="BackgroundColor" Value="{DynamicResource CalendarBackgroundColor}" />
    </Style>

    <Style TargetType="{x:Type xc:NavigationView}" x:Key="DefaultNavigationViewStyle">
        <Setter Property="BackgroundColor" Value="{DynamicResource CalendarPrimaryColor}" />
        <Setter Property="ArrowColor" Value="{DynamicResource CalendarPrimaryTextColor}" />
        <Setter Property="TextColor" Value="{DynamicResource CalendarPrimaryTextColor}" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- <Style TargetType="{x:Type xc:DayView}" x:Key="DefaultDayViewStyle"> -->
    <!--     ~1~ <Setter Property="CurrentMonthTextColor" Value="{StaticResource CalendarBackgroundTextColor}" /> @1@ -->
    <!--     ~1~ <Setter Property="TodayTextColor" Value="{StaticResource CalendarPrimaryColor}" /> @1@ -->
    <!--     <Setter Property="InvalidTextColor" Value="{StaticResource CalendarTertiaryColor}" /> -->
    <!--     <Setter Property="SelectedBackgroundColor" Value="{StaticResource CalendarPrimaryColor}" /> -->
    <!--     <Setter Property="SelectedTextColor" Value="{StaticResource CalendarPrimaryTextColor}" /> -->
    <!-- </Style> -->

    <Style TargetType="{x:Type ContentPage}" x:Key="DefaultPageStyle">
        <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
        <Setter Property="Shell.BackgroundColor" Value="{DynamicResource PrimaryColor}" />
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
    </Style>

    <Style TargetType="{x:Type Entry}">
        <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
    </Style>

    <Style TargetType="{x:Type Editor}">
        <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="AutoSize" Value="TextChanges" />
    </Style>

    <Style TargetType="{x:Type Picker}">
        <Setter Property="TextColor" Value="{DynamicResource ContentTextColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
    </Style>

    <Style TargetType="{x:Type Switch}">
        <Setter Property="OnColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="ThumbColor" Value="#EEEEEF" />
    </Style>

    <Style TargetType="{x:Type Grid}">
        <Setter Property="ColumnSpacing" Value="0" />
        <Setter Property="RowSpacing" Value="0" />
    </Style>
</ResourceDictionary>