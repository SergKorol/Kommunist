<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kommunist.Application.CustomTabBar">
    <Grid BackgroundColor="LightGray"
          HeightRequest="60">
        <FlexLayout Direction="Row"
                    JustifyContent="SpaceAround"
                    AlignItems="Center">
            <!-- Home Tab -->
            <VerticalStackLayout x:Name="HomeTab" Spacing="4" Padding="10">
                <Image Source="icon_home1.png" HeightRequest="24" WidthRequest="24" />
                <Label Text="Home" HorizontalOptions="Center" FontSize="12" TextColor="Black" />
            </VerticalStackLayout>

            <!-- Calendar Tab -->
            <VerticalStackLayout x:Name="CalendarTab" Spacing="4" Padding="10">
                <Image Source="icon_calendar_colorful.png" HeightRequest="24" WidthRequest="24" />
                <Label Text="Calendar" HorizontalOptions="Center" FontSize="12" TextColor="Black" />
            </VerticalStackLayout>

            <!-- Filters Tab -->
            <VerticalStackLayout x:Name="FiltersTab" Spacing="4" Padding="10">
                <Image Source="icon_filters_colorful.png" HeightRequest="24" WidthRequest="24" />
                <Label Text="Filters" HorizontalOptions="Center" FontSize="12" TextColor="Black" />
            </VerticalStackLayout>

            <!-- Settings Tab -->
            <VerticalStackLayout x:Name="SettingsTab" Spacing="4" Padding="10">
                <Image Source="icon_settings_colorful.png" HeightRequest="24" WidthRequest="24" />
                <Label Text="Settings" HorizontalOptions="Center" FontSize="12" TextColor="Black" />
            </VerticalStackLayout>
        </FlexLayout>
    </Grid>
</ContentView>